# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Gemini AI API Key (Required for all services)
GEMINI_API_KEY=your_gemini_api_key_here

# Twilio Configuration (Required for WhatsApp bot)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Optional: Twilio WhatsApp Sandbox Number (for testing)
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Optional: Your WhatsApp Number (for testing)
YOUR_WHATSAPP_NUMBER=whatsapp:+1234567890

# Optional: Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Optional: Logging Level
LOG_LEVEL=INFO
